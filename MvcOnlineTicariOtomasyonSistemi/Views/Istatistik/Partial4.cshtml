@model IEnumerable<MvcOnlineTicariOtomasyonSistemi.Models.Sınıflar.SinifGrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün-Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Task</th>
                    <th>Progress</th>
                    <th style="width: 40px">Label</th>
                </tr>
            </thead>
            <tbody>
                @{ int siraNo = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{siraNo++;}@siraNo.</td>
                        <td>@x.Marka</td>
                        <td>
                            @if (x.Sayi >= 1 && x.Sayi < 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.Sayi >= 2 && x.Sayi < 4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.Sayi >= 4 && x.Sayi < 10)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-dark" style="width: 95%"></div>
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-danger">@x.Sayi</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>